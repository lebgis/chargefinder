<TableLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
>
  <TableRow android:layout_width="fill_parent" android:orientation="horizontal">
    <TextView 
        android:id="@+id/address_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="10dip"
        android:text="@string/alert_dialog_lookup_address"
        android:textSize="20dip"
    />
  </TableRow>
  <TableRow android:layout_width="fill_parent" android:orientation="horizontal">
    <EditText
        android:id="@+id/address_edit"
        android:layout_height="wrap_content"
        android:layout_width="200dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="10dip"
        android:scrollHorizontally="true"
    />
    <Button 
	android:id="@+id/contact_address_lookup" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
        android:layout_marginLeft="10dip"
        android:layout_marginRight="20dip"
	android:text=":)"
    />
  </TableRow>
  <TableRow android:layout_width="fill_parent" android:orientation="horizontal">
    <TextView
        android:id="@+id/range_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="10dip"
        android:text="@string/alert_dialog_lookup_range"
        android:textSize="20dip"
    />
  </TableRow>
  <TableRow android:layout_width="fill_parent" android:orientation="horizontal">
    <EditText
        android:id="@+id/range_edit"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="10dip"
        android:scrollHorizontally="true"
    />
  </TableRow>        
</TableLayout>
